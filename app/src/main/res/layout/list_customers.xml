<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardCornerRadius="14dp"
        android:orientation="vertical"
        android:backgroundTint="@color/semigrey"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/nama_customers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="15dp"
            android:text="Nama Customers" />

        <TextView
            android:id="@+id/email_customers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="15dp"
            android:layout_marginTop="32dp"
            android:text="Email Customers" />

        <TextView
            android:id="@+id/alamat_customers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:padding="15dp"
            android:layout_marginTop="60dp"
            android:text="Alamat Customers" />
    </androidx.cardview.widget.CardView>

</LinearLayout>