<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/semigrey2"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/sip"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-30dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/namaku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="190dp"
                    android:text="Helmi Salsabila"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="225dp"
                    android:text="1194018@std.poltekpos.ac.id"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/semigrey2">

                <TextView
                    android:id="@+id/sosmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sosial Media"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/semigrey2">

                <ImageView
                    android:id="@+id/img_ig"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ig"/>

                <TextView
                    android:id="@+id/ig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:textSize="12dp"
                    android:text="Hels.ae"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-75dp"
                android:backgroundTint="@color/semigrey2">

                <ImageView
                    android:id="@+id/img_gh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/gh"/>

                <TextView
                    android:id="@+id/gh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:text="Helmisalsabila9"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/semigrey2">

                <ImageView
                    android:id="@+id/img_in"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/in"/>

                <TextView
                    android:id="@+id/in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:text="Helmisalsabila9"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-75dp"
                android:backgroundTint="@color/semigrey2">

                <ImageView
                    android:id="@+id/img_web"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/web"/>

                <TextView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:text="www.helmisalsabila.com"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>